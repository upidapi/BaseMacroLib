import platform as _platform


_system = _platform.system()
if _system == 'Windows':
    from Windows.mouse import Mouse as WindowsMouse
    from Windows.keyboard import Keyboard as WindowsKeyboard

    Mouse, Keyboard = WindowsMouse, WindowsKeyboard
elif _system == 'Linux':
    from Linux.mouse import Mouse as LinuxMouse
    from Linux.keyboard import Keyboard as LinuxKeyboard
    
    Mouse, Keyboard = LinuxMouse, LinuxKeyboard
elif _system == 'Darwin':
    try:
        from Darwin.mouse import Mouse as DarwinMouse
        from Darwin.keyboard import Keyboard as DarwinKeyboard

        Mouse, Keyboard = DarwinMouse, DarwinKeyboard
    except ImportError as e:
        # This can happen during setup if pyobj wasn't already installed
        raise e
else:
    raise OSError(f"Unsupported platform \"{_system}\"".)
